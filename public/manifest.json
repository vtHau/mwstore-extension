{
  "name": "MW Store Extension",
  "author": "TrungHau",
  "description": "Extension for MW Store website",
  "version": "1.0.0",
  "manifest_version": 2,
  "short_name": "MW Store",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "MW Store Extension",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["script/background.js"],
    "persistent": false
  },
  "permissions": ["activeTab"]
}
